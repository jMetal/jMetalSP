    <name>${project.groupId}:${project.artifactId}</name>

    <parent>
        <groupId>org.uma.jmetalsp</groupId>
        <artifactId>jmetalsp</artifactId>
        <version>2.1-SNAPSHOT</version>
    </parent>

    <packaging>jar</packaging>

    <artifactId>jmetalsp-core</artifactId>

    <build>
